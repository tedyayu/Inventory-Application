<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Manage Categories</h1>
    <a href="/catagories/create">Create New Category</a>
    <ul>
        <% if (catagories && catagories.length > 0) { %>
            <% catagories.forEach(category => { %>
                <li>
                    <a href="/catagories/<%= category.id %>"><%= category.name %></a>
                    <a href="/catagories/<%= category.id %>/edit">Edit</a>
                </li>
            <% }); %>
        <% } else { %>
            <p>No categories found. Add a new category to get started!</p>
        <% } %>
    </ul>
</body>
</html>
