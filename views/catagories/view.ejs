<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.name %> - Items</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Items in <%= category.name %></h1>
        <div class="list-group">
            <% if (items.length > 0) { %>
                <% items.forEach(item => { %>
                    <div class="list-group-item">
                        <h5><%= item.name %></h5>
                        <p><%= item.description %></p>
                        <p><strong>Price:</strong> $<%= item.price %></p>
                        <p><strong>Stock:</strong> <%= item.stock_quantity %></p>
                        <a href="/items/<%= item.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/items/<%= item.id %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" name="_method" value="DELETE">Delete</button>
                        </form>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No items available in this category.</p>
            <% } %>
        </div>
        <a href="/items/new" class="btn btn-primary mt-3">Add Item</a>
        <a href="/categories" class="btn btn-secondary mt-3">Back to Categories</a>
    </div>
</body>
</html>