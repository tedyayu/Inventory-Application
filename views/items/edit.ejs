<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Item</title>
</head>
<body>
    <h1>Edit Item</h1>
    <form action="/items/<%= item.id %>/edit" method="POST">
        <label for="categoryId">Category:</label>
        <select id="categoryId" name="categoryId" required>
            <% catagories.forEach(category => { %>
                <option value="<%= category.id %>" <%= item.category_id === category.id ? 'selected' : '' %>><%= category.name %></option>
            <% }); %>
        </select>
        <br>
        <label for="name">Item Name:</label>
        <input type="text" id="name" name="name" value="<%= item.name %>" required>
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description" required><%= item.description %></textarea>
        <br>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= item.price %>" required>
        <br>
        <label for="stock_quantity">Stock Quantity:</label>
        <input type="number" id="stock_quantity" name="stock_quantity" value="<%= item.stock_quantity %>" required>
        <br>
        <button type="submit">Update</button>
    </form>
    <a href="/">Back to Home</a>
</body>
</html>
